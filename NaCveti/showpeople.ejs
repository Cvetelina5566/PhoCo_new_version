<!-- showpeople.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <title><%= albumName %> - People</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
    <style>
      .secoundDiv{

border-width: 4px;
inline-size: 130px ;
border-bottom-style: solid;
border-top-style: solid;
border-image: linear-gradient(to right,darkorchid,rgb(13, 229, 204)) 1;
margin:12px ;

}

.firstDiv{
                border-bottom-width: 4px;
                /* inline-size: 476px ; */
                border-bottom-style: solid;
                border-image: linear-gradient(to right,darkorchid,rgb(13, 229, 204)) 1;
                margin: 15px 32px

            }
    </style>
  </head>
  <body>
  <a href="http://localhost:4000/main"></ahref><button class="secoundDiv">Go back</button></a>
    <h2 class="firstDiv" style="text-align: center;"><%= realname %> - People</h1>
    <% people.forEach((person) => { %>
      <div>
        <% person.images.forEach((image) => { %>
          <img style="width:30.33%;height: 205px; margin-left: 20px; margin-top: 20px;" src="<%= image %>" alt="" width = 300px/>
        <% }) %>
        <br>
        <a href="/viewalbum/viewpeople/memo?person=<%=person.name%>&name=<%= albumName %>"><button style="margin-left: 22px; font-family: 'Lobster';" class="secoundDiv">View <%= person.name %></button></a>

      </div>
    <% }) %>
  </body>
</html>

